{
  "manifest_version": 3,
  "name": "xnpm",
  "short_name": "xnpm",
  "description": "Adds a link to view npm packages on npmx.dev",
  "version": "1.0.0",
  "author": "tbeseda",
  "homepage_url": "https://github.com/tbeseda/xnpm-webextension",
  "icons": {
    "16": "assets/icon-16.png",
    "32": "assets/icon-32.png",
    "64": "assets/icon-64.png",
    "128": "assets/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.npmjs.com/package/*"],
      "js": ["content.user.js"],
      "run_at": "document_idle"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "xnpm@tbeseda.com",
      "strict_min_version": "109.0",
      "data_collection_permissions": {
        "required": ["none"],
        "optional": []
      }
    }
  }
}
